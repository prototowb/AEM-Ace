---
import Layout from '../layouts/Layout.astro';
import QuizApp from '../components/QuizApp.vue';
---

<Layout title="Interactive Quiz - AEM Ace">
  <div class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">
          Interactive Quiz
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Test your knowledge with our interactive multiple-choice quizzes. 
          Choose a category or take a comprehensive mixed quiz covering all AEM topics.
        </p>
      </div>
      
      <QuizApp client:load />
    </div>
  </div>
</Layout>